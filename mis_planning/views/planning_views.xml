<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mis_planning_slot_form_view" model="ir.ui.view">
        <field name="name">mis.planning.slot.form</field>
        <field name="model">planning.slot</field>
         <field name="inherit_id" ref="planning.planning_view_form"/>
        <field name="arch" type="xml">
            <field name="employee_id" position="before">
                <field name="crm_id" readonly="1"/>
                <field name="partner_id"/>
                <field name="revenue"/>
                 <field name="unit_number"/>
                <field name="building_name"/>
                <field name="scope"/>
                <field name="job_status_id" />

                <field name="is_invoice" invisible="1"/>
                <field name="journal_id" attrs="{'invisible': [('is_invoice', '=', False)], 'required': [('is_invoice', '=', True)]}"/>
<!--                <field name="invoice_id"/>-->
                <field name="job_closingdate" attrs="{'invisible': [('is_invoice', '=', False)], 'required': [('is_invoice', '=', True)]}"/>
                <field name="paid_amount" attrs="{'invisible': [('is_invoice', '=', False)], 'required': [('is_invoice', '=', True)]}"/>
            </field>
            <field name="start_datetime" position="replace">
                <field name="start_datetime"  readonly="1"/>
            </field>
            <field name="end_datetime" position="replace">
                <field name="end_datetime" readonly="1"/>
            </field>

            <field name="role_id" position="replace">
                <field name="role_id" string="Team"/>
            </field>
        </field>
    </record>

    <record id="mis_planning_view_calendar" model="ir.ui.view">
        <field name="name">mis.planning.calendar.form</field>
        <field name="model">planning.slot</field>
         <field name="inherit_id" ref="planning.planning_view_calendar"/>
        <field name="arch" type="xml">
            <field name="employee_id" position="before">
                <field name="crm_id"/>
                <field name="partner_id"/>
                <field name="revenue"/>
                 <field name="unit_number"/>
                <field name="building_name"/>
                <field name="scope"/>
                <field name="job_status_id"/>

                <field name="is_invoice" invisible="1"/>
                <field name="journal_id" attrs="{'invisible': [('is_invoice', '=', False)], 'required': [('is_invoice', '=', True)]}"/>
                <field name="paid_amount" attrs="{'invisible': [('is_invoice', '=', False)], 'required': [('is_invoice', '=', True)]}"/>
<!--                 <field name="payment_id" attrs="{'invisible': [('payment_id', '=', False)]}"/>-->

            </field>
        </field>
    </record>
    <record id="mis_planning_view_graph" model="ir.ui.view">
        <field name="name">mis.planning.slot.graph</field>
        <field name="model">planning.slot</field>
        <field name="inherit_id" ref="planning.planning_view_graph"/>
        <field name="arch" type="xml">
            <field name="employee_id" position="before">
                <field name="crm_id"/>
                <field name="partner_id"/>
                <field name="revenue"/>
                <field name="area_id"/>
                <field name="unit_number"/>
                <field name="building_name"/>
                <field name="scope"/>
                <field name="job_status_id" options="{'limit': 10, 'create': false, 'create_edit': false}"/>
                <field name="is_invoice" invisible="1"/>
                <field name="journal_id" attrs="{'invisible': [('is_invoice', '=', False)], 'required': [('is_invoice', '=', True)]}"/>
                <field name="paid_amount" attrs="{'invisible': [('is_invoice', '=', False)], 'required': [('is_invoice', '=', True)]}"/>

            </field>
         </field>
    </record>



    <record id="mis_planning_view_form_quickcreate" model="ir.ui.view">
        <field name="name">mis.planning.slot.form.quickcreate</field>
        <field name="model">planning.slot</field>
        <field name="inherit_id" ref="planning.planning_view_form_quickcreate"/>
        <field name="arch" type="xml">
             <field name="employee_id" position="before">
                <field name="crm_id"/>
                <field name="partner_id"/>
                <field name="revenue"/>
                  <field name="unit_number"/>
                <field name="building_name"/>
                <field name="scope"/>
                 <field name="job_status_id"/>
                <field name="is_invoice" invisible="1"/>
                <field name="journal_id" attrs="{'invisible': [('is_invoice', '=', False)], 'required': [('is_invoice', '=', True)]}"/>
                <field name="paid_amount" attrs="{'invisible': [('is_invoice', '=', False)], 'required': [('is_invoice', '=', True)]}"/>
            </field>
        </field>
    </record>

</odoo>