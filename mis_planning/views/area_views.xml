<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mis_area" model="ir.ui.view">
        <field name="name">mis.area.form</field>
        <field name="model">mis.area</field>
        <field name="arch" type="xml">
            <form string="Area">
                <group>
                    <field name="name"/>
                </group>
            </form>
        </field>
    </record>

    <record id="mis_area_action" model="ir.actions.act_window">
        <field name="name">Area</field>
        <field name="res_model">mis.area</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
             <p>
                Add a new  Area
              </p>
        </field>
    </record>

    <menuitem
        id="menu_crm_area_act"
        name="Area"
        sequence="100"
        action="mis_area_action"
        parent="crm.menu_crm_config_lead"/>
</odoo>