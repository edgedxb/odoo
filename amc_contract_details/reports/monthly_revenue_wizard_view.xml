<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <record id="monthly_revenue_report_form_view" model="ir.ui.view">
    <field name="name">Monthly Revenue Wizard Form</field>
    <field name="model">monthly.revenue.wizard</field>
    <field name="arch" type="xml">
      <form string="Monthly Revenue XLS Report">
        <group>
          <group>
             <field name="year"/>
          </group>
          <group>
<!--            <field name="date_end"/>-->
          </group>
        </group>
        <footer>
          <button name="action_create_report"
                  string="XLS Report"
                  type="object"
                  class="oe_highlight"/>
          <button string="Cancel"
                  class="btn btn-default"
                  special="cancel"/>
        </footer>
      </form>
    </field>
  </record>

 <record id="action_monthly_revenue_report" model="ir.actions.act_window">
    <field name="name">Monthly Revenue Report</field>
    <field name="res_model">monthly.revenue.wizard</field>

    <field name="view_mode">form</field>
    <field name="target">new</field>
  </record>

