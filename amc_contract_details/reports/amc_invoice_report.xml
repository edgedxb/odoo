<?xml version="1.0"?>
<odoo>
  <data>
    <template id="report_amc_invoice_report">
        <template  id="report_header_custom" inherit_id="report.external_layout_header">
            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id"/>
            </t>
             <t t-if="not o or not 'company_id' in o">
                 <t t-set="company" t-value="res_company"/>
             </t>
             <xpath expr="//div[@class='header']" position="replace">
                 <div class="header">
                     <div class="row">
                         <div class="col-9 text-left">
                             <br/><br/>
                             <span style="font-size: 18px;"><b>Edge Integrated Technical Services LLC</b></span><br/>
                             Office # 2908, Citadel Tower ,Business Bay<br/>
                                Dubai, Dubai 122781<br/>
                                accounts@edgedxb.com<br/>
                                TRN 100346573700003<br/>
                         </div>
                         <div class="col-3 text-right"><br/><br/>
                            <img src="/amc_contract_details/static/src/img/logo.png"
                                         style="margin:auto;width:100%;display:block;align:right;"/>
                         </div>
                     </div>
                 </div>
             </xpath>
        </template>
        <template id="custom_layout_footer" inherit_id="report.external_layout_footer">
            <xpath expr="//div[@class='footer']" position="replace">
                <div class="footer">
                    <div class="row">
                        <div class="col-12" style="text-align:center;">
                           Thank you for your business
                        </div>

                    </div>
                </div>
            </xpath>
        </template>

        <t t-call="web.external_layout">
        <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
       
        <div class="page">
            <div class="oe_structure"/>

            <table width="100%">
                <tr>
                    <td width="100%"  colspan="2" valign="middle" align="center">
                        <br/><br/>
                        <h2>
                            <!-- <t>
                                <span t-if="doc.contract_state not in ['draft']">AMC Contract </span>
                                <span t-if="doc.contract_state in ['draft']">AMC Draft Contract</span>
                            </t> -->
                            <t>
                                <span>AMC Invoice Report</span>
                            </t>
                        </h2>
                    </td>
                </tr>
                <tr style="color: white;background: #2E86C1;font-weight: bold;height: 5px;width: 100%;">
                    <td width="100%"  colspan="2" valign="middle" align="center" style="height: 2px;"/>
                </tr>

                <tr>
                     <td width="70%"  valign="top" align="left">
                         <u><b>ADDRESS</b></u><br/>

                        <t t-if="doc.partner_id.name"><span t-field="doc.partner_id.name"/><br/></t>
                        <t t-if="doc.partner_id.street"><span t-field="doc.partner_id.street"/>&amp;nbsp;</t>
                        <t t-if="doc.partner_id.street2"><span t-field="doc.partner_id.street2"/></t>
                        <t t-if="doc.partner_id.street or doc.partner_id.street2"><br/></t>
                        <t t-if="doc.partner_id.zip">P.O. Box <span t-field="doc.partner_id.zip"/><br/></t>
                        <t t-if="doc.partner_id.state_id"><span t-field="doc.partner_id.state_id.name"/>&amp;nbsp;</t>
                        <t t-if="doc.partner_id.country_id.name"><span t-field="doc.partner_id.country_id.name"/><br/></t>
                        <t t-if="doc.partner_id.email"><i class="fa envelope-o"/> <span t-field="doc.partner_id.email"/><br/></t>
                        <t t-if="doc.partner_id.phone"><i class="fa fa-phone"/> <span t-field="doc.partner_id.phone"/><br/></t>
                        <t t-if="doc.partner_id.vat"><t t-esc="doc.company_id.country_id.vat_label or 'Tax ID'"/>: <span t-field="doc.partner_id.vat"/><br/></t>
                          <br/>
                     </td>
                     <td width="30%" valign="top" align="right">
                         <table width="100%">

                             <tr style="color: white;background: #2E86C1;font-weight: bold;height: 30px;width: 100%;">
                                 <td align="left" style="padding-top: 5px;padding-left: 10px;padding-top: 4px;"><strong>Ref</strong></td>
                                 <td align="left"><strong>:</strong></td>
                                 <td align="center" style="padding-top: 5px;padding-left: 10px;padding-top: 4px;"><span t-field="doc.name"/></td>
                            </tr>
                             <tr style="color: white;background: #2E86C1;font-weight: bold;height: 30px;width: 100%;">
                                <td align="left" style="padding-top: 5px;padding-left: 10px;padding-top: 4px;"><strong>Date</strong></td>
                                <td align="left"><strong>:</strong></td>
                                <td align="center" style="padding-top: 5px;padding-left: 10px;padding-top: 4px;"><span t-field="doc.date" t-options="{&quot;widget&quot;: &quot;date&quot;}"/></td>
                            </tr>
                            <tr style="color: white;background: #2E86C1;font-weight: bold;height: 30px;width: 100%;">
                                <td align="left" style="padding-top: 5px;padding-left: 10px;padding-top: 4px;"><strong>Subtotal</strong></td>
                                <td align="left"><strong>:</strong></td>
                                <td align="center" style="padding-top: 5px;padding-left: 10px;padding-top: 4px;"><span t-esc="'{0:,.2f}'.format(doc.subtotal_amount)"/></td>
                            </tr>
                            <tr style="color: white;background: #2E86C1;font-weight: bold;height: 30px;width: 100%;">
                                <td align="left" style="padding-top: 5px;padding-left: 10px;padding-top: 4px;"><strong>Paid Amt</strong></td>
                                <td align="left"><strong>:</strong></td>
                                <td align="center" style="padding-top: 5px;padding-left: 10px;padding-top: 4px;"><span t-esc="'{0:,.2f}'.format(doc.total_paid)"/></td>
                            </tr>
                            <tr style="color: white;background: #2E86C1;font-weight: bold;height: 30px;width: 100%;">
                                <td align="left" style="padding-top: 5px;padding-left: 10px;padding-top: 4px;"><strong>Paid Due</strong></td>
                                <td align="left"><strong>:</strong></td>
                                <td align="center" style="padding-top: 5px;padding-left: 10px;padding-top: 4px;"><span t-esc="'{0:,.2f}'.format(doc.total_due)"/></td>
                            </tr>
                        </table>

                     </td>
                </tr>
                <tr style="color: white;background: #2E86C1;font-weight: bold;height: 5px;width: 100%;">
                    <td width="100%"  colspan="2" valign="middle" align="center" style="height: 2px;"/>
                </tr>

                <tr>
                     <td align="left" style="padding-top: 5px;padding-left: 10px;padding-top: 4px;">
                         <br/>
                         <strong><u>UNIT #</u></strong>
                         <br/>
                         <span t-field="doc.unit_no"/>
                     </td>
                     <td class="left" style="padding-top: 5px;padding-left: 10px;padding-top: 4px;">
                         <br/>
                         <strong><u>BUILDING NAME</u></strong>
                         <br/>
                         <span t-field="doc.building_name"/>
                         <br/>
                         <strong><u>Area</u></strong>
                         <br/>
                         <span t-field="doc.area_id"/>
                     </td>
                </tr>


            </table>
            <br/><br/>
            <table class="table table-sm o_main_table">

                    <tr  style="color: white;background: #2E86C1;font-weight: bold;height: 30px;width: 100%;">
                        <th  class="text-left"  width="35%" style="padding-top: 5px;padding-left: 10px;padding-top: 4px;"><strong>Product</strong></th>
                        <th class="text-left"  width="40%" style="padding-top: 5px;padding-left: 10px;padding-top: 4px;"> <strong>Scope</strong></th>
                        <th class="text-left"  width="10%" style="padding-top: 5px;padding-left: 10px;padding-top: 4px;"><strong>Date</strong></th>
                        <th class="text-center"  width="15%" style="padding-top: 5px;padding-left: 10px;padding-top: 4px;"><strong>Amount</strong></th>

<!--                        <th class="text-right"  width="20%" style="padding-top: 5px;padding-left: 10px;padding-top: 4px;"><strong>CRM</strong></th>-->
<!--                        <th class="text-right"  width="20%" style="padding-top: 5px;padding-left: 10px;padding-top: 4px;"><strong>Planning</strong></th>-->
                    </tr>

                <tbody class="amc_contract_tbody">
                    <t t-foreach="doc.contract_line_ids" t-as="line">
                        <tr t-att-class="'bg-200 font-weight-bold o_line_section'">
                            <t>
                                <td class="text-left"><span t-field="line.product_id.name"/></td>
                                <td class="text-left"><span t-field="line.scope"/></td>
                                <td class="text-left"><span t-field="line.date"  t-options="{&quot;widget&quot;: &quot;date&quot;}"/></td>
                                <td class="text-right"><span t-esc="'{0:,.2f}'.format(line.amount)"/></td>
<!--                                <td name="td_name"><span t-field="line.lead_id.name"/></td>-->
<!--                                <td name="td_name"><span t-field="line.planning_id.name"/></td>-->
                            </t>
                        </tr>
                    </t>
                </tbody>
            </table>
            <br/><br/>
            <div class="clearfix" name="so_total_summary">
                <div id="total" class="row" name="total">
                    <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                        <table class="table table-sm">
                            <tr class="border-black o_total">
                                <td name="td_amount_total_label"><strong>Total Amount</strong></td>
                                <td name="td_amount_total" class="text-right">
                                    <span  style="font-weight: bold;" t-esc="'{0:,.2f}'.format(doc.total_amount)"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
    </div>
    </t>
 </template>
       <template id="amc_contract_details.amc_invoice_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="amc_contract_details.report_amc_invoice_report" t-lang="doc.partner_id.lang"/>
                </t>
            </t>
       </template>


  </data>
</odoo>

