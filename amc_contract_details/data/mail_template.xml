<?xml version="1.0" ?>
<odoo>

    <!--Creating Email Template in Odoo-->
    <data noupdate="0">
        <record id="amc_contract_email_template" model="mail.template">
            <field name="name">AMC Contract: Send by email</field>
            <field name="model_id" ref="amc_contract_details.model_amc_contract"/>
            <field name="email_from">${object.company_id.email |safe}</field>
            <field name="email_to">${object.partner_id.email_id}</field>
            <field name="subject">${object.contract_name}</field>
            <field name="auto_delete" eval="True"/>
           <field name="lang">${object.partner_id.lang}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear ${object.partner_id.name}
                        <br /><br />
                        Here is your contract with reference ${object.name}
                        <br /><br />
                        <table border="1" style="width:50%;">
                            <tbody>
                            <tr>
                                <th style="width:135px">Date</th>
                                <th style="width: 85px;">Scope</th>
                            </tr>
                            % for row in object.contract_line_ids:
                                <tr>
                                    <td> ${row.date}</td>
                                    <td style="text-align: center;">${row.scope}</td>
                                </tr>
                            %endfor
                            </tbody>
                        </table>
                        If you have queries feel free to ask.
                    </p>
                </div>
            </field>
        </record>
    </data>

</odoo>
