<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_edged_budget_post_search" model="ir.ui.view">
        <field name="name">edged.budget.post.search</field>
        <field name="model">edged.budget.post</field>
        <field name="arch" type="xml">
            <search string="Edged Budgetary Position">
                <field name="name" filter_domain="[('name','ilike',self)]" string="Edged Budgetary"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </search>
        </field>
    </record>

    <record id="view_edged_budget_post_tree" model="ir.ui.view">
        <field name="name">edged.budget.post.tree</field>
        <field name="model">edged.budget.post</field>
        <field name="arch" type="xml">
            <tree string="Edged Budgetary">
                <field name="name"/>
                <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <record id="open_edged_budget_post_form" model="ir.actions.act_window">
        <field name="name">Edged Budgetary</field>
        <field name="res_model">edged.budget.post</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="view_id" ref="view_edged_budget_post_tree"/>
        <field name="search_view_id" ref="view_edged_budget_post_search"/>
    </record>
    <menuitem action="open_edged_budget_post_form" id="menu_edged_budget_post_form"
              parent="account.account_management_menu" sequence="5"/>


    <record model="ir.ui.view" id="view_edged_budget_post_form">
        <field name="name">edged.budget.post.form</field>
        <field name="model">edged.budget.post</field>
        <field name="arch" type="xml">
            <form string="Sales Budgetary">
            <sheet>
                <group col="4">
                    <field name="name"/>
                    <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                </group>
                <notebook>
                    <page string="Budget" name="budget">
                                <field name="name"/>
                    </page>
                </notebook>
            </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="edged_budget_view_form">
        <field name="name">edged.budget.view.form</field>
        <field name="model">edged.budget</field>
        <field name="arch" type="xml">
            <form string="Sales Budget">
                <header>
                    <button string="Confirm" name="action_budget_confirm" states="draft" type="object"
                            class="oe_highlight"/>
                    <button string="Approve" name="action_budget_validate" states="confirm" type="object"
                            class="oe_highlight"/>
                    <button string="Done" name="action_budget_done" states="validate" type="object"
                            class="oe_highlight"/>
                    <button string="Reset to Draft" name="action_budget_draft" states="cancel" type="object"/>
                    <button string="Cancel Budget" name="action_budget_cancel" states="confirm,validate" type="object"/>
                    <field name="state" widget="statusbar" />
                </header>
                <sheet string="Budget">
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" attrs="{'readonly':[('state','!=','draft')]}" placeholder="e.g. Budget 2021: Optimistic"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="user_id" attrs="{'readonly':[('state','!=','draft')]}" domain="[('share', '=', False)]"/>
                        </group>
                        <group>
                            <label for="date_from" string="Period"/>
                            <div>
                                <div name="date_edit_only" class="o_row oe_edit_only">
                                    <span>From <field name="date_from" class='oe_inline' attrs="{'readonly':[('state','!=','draft')]}"/></span>
                                    <span>To <field name="date_to" class='oe_inline' attrs="{'readonly':[('state','!=','draft')]}"/></span>
                                </div>
                                <div name="date_read_only" class="o_row oe_read_only">
                                    <span attrs="{'invisible': [('date_from', '=', False)]}">From <field name="date_from" class='oe_inline'/></span>
                                    <span attrs="{'invisible': [('date_to', '=', False)]}">To <field name="date_to" class='oe_inline'/></span>
                                </div>
                            </div>
                            <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                            <field name="monthly_sales_target"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Edget Budget Lines" name="edged_budget_lines">
                            <field name="edged_budget_line"  nolabel="1" attrs="{'readonly':[('state','!=','draft')]}">
<!--                                   context="{'default_date_from': date_from,'default_date_to': date_to}" colspan="4"-->

<!--                                <tree string="Sales Budget Lines" decoration-success="is_above_budget and planned_amount &gt; 0" decoration-danger="is_above_budget and planned_amount &lt; 0" editable="bottom">-->
                                <tree string="Edge Budget Lines"  editable="bottom">
<!--                                    <field name="user_id"   width="100"  options="{'no_create': True, 'no_create_edit':True}" />-->
                                    <field name="account_id"   width="100"  options="{'no_create': True, 'no_create_edit':True}" />
                                    <field name="budget_amount"/>

                                    <field name="achieved_budget"/>

                                </tree>

                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="edged_budget_view_tree">
        <field name="name">edged.budget.view.tree</field>
        <field name="model">edged.budget</field>
        <field name="arch" type="xml">
            <tree decoration-info="state == 'draft'" decoration-muted="state in ('done','cancel')" string="Budget">
                <field name="name"/>
                <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                <field name="user_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_edged_budget_kanban" model="ir.ui.view">
        <field name="name">edged.budget.kanban</field>
        <field name="model">edged.budget</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="user_id"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="row mb4">
                                <div class="col-8">
                                    <strong>
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <div class="col-4">
                                    <span class="float-right">
                                        <field name="state" widget="label_selection"
                                               options="{'classes': {'draft': 'default', 'done': 'success'}}"/>
                                    </span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-10">
                                    <i class="fa fa-clock-o" role="img" aria-label="Period" title="Period"/>
                                    <t t-esc="record.date_from.value"/>-
                                    <t t-esc="record.date_to.value"/>
                                </div>
                                <div class="col-2">
                                    <span class="float-right">
                                        <field name="user_id" widget="many2one_avatar_user"/>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_edged_budget_search" model="ir.ui.view">
        <field name="name">edged.budget.search</field>
        <field name="model">edged.budget</field>
        <field name="arch" type="xml">
            <search string="Budget">
                <field name="name" filter_domain="[('name', 'ilike', self)]" string="Budget"/>
                <field name="date_from"/>
                <field name="date_to"/>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="act_edged_budget_view">
        <field name="name">Edge Budgets</field>
        <field name="res_model">edged.budget</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="view_id" ref="edged_budget_view_tree"/>
        <field name="search_view_id" ref="view_edged_budget_search"/>
         <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click to create a new  budget.
            </p>
            <p>
                Use  budgets to compare actual with expected Sales
            </p>
        </field>
    </record>
    <menuitem parent="account.menu_finance_entries_management"
              id="menu_act_edged_budget_view"
              name="Edge Budgets"
              action="act_edged_budget_view"  sequence="60"
              groups="account.group_account_manager"/>



</odoo>
