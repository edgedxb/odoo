<?xml version="1.0"?>
<odoo>
  <data>
    <template id="report_saleorder_document">
        <template  id="report_header_custom" inherit_id="report.external_layout_header">
            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id"/>
            </t>
             <t t-if="not o or not 'company_id' in o">
                 <t t-set="company" t-value="res_company"/>
             </t>
             <xpath expr="//div[@class='header']" position="replace">
                 <div class="header">
                     <div class="row">
                         <div class="col-9 text-left">
                             <br/><br/>
                             <span style="font-size: 18px;"><b>Edge Integrated Technical Services LLC</b></span><br/>
                             <t t-if="doc.company_id.street"><span t-field="doc.company_id.street"/>&amp;nbsp;</t>
                                <t t-if="doc.company_id.street2"><span t-field="doc.company_id.street2"/>&amp;nbsp;</t>
                                <t t-if="doc.company_id.street or doc.company_id.street2"><br/></t>
                                <t t-if="doc.company_id.city"><span t-field="doc.company_id.city"/>&amp;nbsp;</t>
                                <t t-if="doc.company_id.country_id.name"><span t-field="doc.company_id.country_id.name"/></t><br/>
                                accounts@edgedxb.com<br/>
                                TRN 100346573700003<br/>
                         </div>
                         <div class="col-3 text-right"><br/><br/>
                            <img src="/mis_reports/static/src/img/logo.png"
                                         style="margin:auto;width:100%;display:block;align:right;"/>
                         </div>
                     </div>
                 </div>
             </xpath>
        </template>
        <template id="custom_layout_footer" inherit_id="report.external_layout_footer">
            <xpath expr="//div[@class='footer']" position="replace">
                <div class="footer">
                    <div class="row">
                        <div class="col-12" style="text-align:center;">
                           Thank you for your business
                        </div>

                    </div>
                </div>
            </xpath>
        </template>

        <t t-call="web.external_layout">
        <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
       
        <div class="page">
            <div class="oe_structure"/>

            <table width="100%">
                <tr>
                    <td width="100%"  colspan="2" valign="middle" align="center">
                        <br/><br/>
                        <h2>
                            <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
                                <span t-if="doc.state not in ['draft','sent']">Sales Order </span>
                                <span t-if="doc.state in ['draft','sent']">Sales Quotation</span>
                            </t>
                            <t t-if="env.context.get('proforma', False) or is_pro_forma">
                                <span>Pro-Forma Invoice</span>
                            </t>
                        </h2>
                    </td>
                </tr>
                <tr style="color: white;background: #2E86C1;font-weight: bold;height: 5px;width: 100%;">
                    <td width="100%"  colspan="2" valign="middle" align="center" style="height: 2px;"/>
                </tr>

                <tr>
                     <td width="70%"  valign="top" align="left">
                         <u><b>ADDRESS</b></u><br/>

                        <t t-if="doc.partner_id.name"><span t-field="doc.partner_id.name"/><br/></t>
                        <t t-if="doc.partner_id.street"><span t-field="doc.partner_id.street"/>&amp;nbsp;</t>
                        <t t-if="doc.partner_id.street2"><span t-field="doc.partner_id.street2"/></t>
                        <t t-if="doc.partner_id.street or doc.partner_id.street2"><br/></t>
                        <t t-if="doc.partner_id.zip">P.O. Box <span t-field="doc.partner_id.zip"/><br/></t>
                        <t t-if="doc.partner_id.state_id"><span t-field="doc.partner_id.state_id.name"/>&amp;nbsp;</t>
                        <t t-if="doc.partner_id.country_id.name"><span t-field="doc.partner_id.country_id.name"/><br/></t>
                        <t t-if="doc.partner_id.email"><i class="fa envelope-o"/> <span t-field="doc.partner_id.email"/><br/></t>
                        <t t-if="doc.partner_id.phone"><i class="fa fa-phone"/> <span t-field="doc.partner_id.phone"/><br/></t>
                        <t t-if="doc.partner_id.vat"><t t-esc="doc.company_id.country_id.vat_label or 'Tax ID'"/>: <span t-field="doc.partner_id.vat"/><br/></t>
                          <br/>
                     </td>
                     <td width="30%" valign="top" align="right">
                         <table width="100%">

                             <tr style="color: white;background: #2E86C1;font-weight: bold;height: 30px;width: 100%;">
                                 <td align="left" style="padding-top: 5px;padding-left: 10px;padding-top: 4px;"><strong>Estimate</strong></td>
                                 <td align="left"><strong>:</strong></td>
                                 <td align="center" style="padding-top: 5px;padding-left: 10px;padding-top: 4px;"><span t-field="doc.name"/></td>
                            </tr>
                             <tr style="color: white;background: #2E86C1;font-weight: bold;height: 30px;width: 100%;">
                                <td align="left" style="padding-top: 5px;padding-left: 10px;padding-top: 4px;"><strong>Date</strong></td>
                                <td align="left"><strong>:</strong></td>
                                <td align="center" style="padding-top: 5px;padding-left: 10px;padding-top: 4px;"><span t-field="doc.date_order" t-options="{&quot;widget&quot;: &quot;date&quot;}"/></td>
                            </tr>
                        </table>

                     </td>
                </tr>
                <tr style="color: white;background: #2E86C1;font-weight: bold;height: 5px;width: 100%;">
                    <td width="100%"  colspan="2" valign="middle" align="center" style="height: 2px;"/>
                </tr>

                <tr>
                     <td align="left" style="padding-top: 5px;padding-left: 10px;padding-top: 4px;">
                         <br/>
                         <strong><u>UNIT #</u></strong>
                         <br/>
                         <span t-field="doc.opportunity_id.unit_number"/>
                     </td>
                     <td align="left" style="padding-top: 5px;padding-left: 10px;padding-top: 4px;">
                         <br/>
                         <strong><u>BUILDING NAME</u></strong>
                         <br/>
                         <span t-field="doc.opportunity_id.building_name"/>
                     </td>
                </tr>


            </table>



            <!-- Is there a discount on at least one line? -->
            <t t-set="display_discount" t-value="any([l.discount for l in doc.order_line])"/>
            <br/><br/>
            <table class="table table-sm o_main_table">

                    <tr  style="color: white;background: #2E86C1;font-weight: bold;height: 30px;width: 100%;">
                        <th name="th_description" class="text-left"  width="43%" style="padding-top: 5px;padding-left: 10px;padding-top: 4px;"><strong>ACTIVITY</strong></th>
                        <th class="text-center"  width="7%" style="padding-top: 5px;padding-left: 10px;padding-top: 4px;"><strong>QTY</strong></th>
                        <th class="text-right"  width="7%" style="padding-top: 5px;padding-left: 10px;padding-top: 4px;"><strong>RATE</strong></th>
                        <th class="text-right"  width="9%" style="padding-top: 5px;padding-left: 10px;padding-top: 4px;"> <strong>VAT (%)</strong></th>
                        <th class="text-right"  width="10%" style="padding-top: 5px;padding-left: 10px;padding-top: 4px;"><strong>AMOUNT</strong></th>
                    </tr>

                <tbody class="sale_tbody">
                    <t t-set="current_subtotal" t-value="0"/>
                    <t t-set="rowno" t-value="1"/>
                    <t t-foreach="doc.order_line" t-as="line">
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                            <t t-if="not line.display_type">


                                <td name="td_name"><span t-field="line.name"/></td>
                                <td name="td_quantity" class="text-right">
                                    <span t-esc="'{0:,.0f}'.format(line.product_uom_qty)"/>
                                    <span t-field="line.product_uom" groups="uom.group_uom"/>
                                </td>
                                <td name="td_priceunit" class="text-right">
                                    <span t-esc="'{0:,.2f}'.format(line.price_unit)"/>
                                </td>

                                <td name="td_taxes" class="text-right">
                                    <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_id))"/>
                                </td>

                                <td name="td_subtotal" class="text-right o_price_total">
                                    <span t-esc="'{0:,.2f}'.format(line.price_total)"/>
                                </td>
                            </t>
                            <t t-if="line.display_type == 'line_section'">
                                <td name="td_section_line" colspan="99">
                                    <span t-field="line.name"/>
                                </td>
                                <t t-set="current_section" t-value="line"/>
                                <t t-set="current_subtotal" t-value="0"/>
                            </t>
                            <t t-if="line.display_type == 'line_note'">
                                <td name="td_note_line" colspan="99">
                                    <span t-field="line.name"/>
                                </td>
                            </t>
                        </tr>

                        <t t-if="current_section and (line_last or doc.order_line[line_index+1].display_type == 'line_section')">
                            <tr class="is-subtotal text-right">
                                <td name="td_section_subtotal" colspan="99">
                                    <strong class="mr16">Subtotal</strong>
                                    <span t-esc="'{0:,.2f}'.format(current_subtotal)"/>
                                </td>
                            </tr>
                        </t>
                    </t>
                </tbody>
            </table>

            <div class="clearfix" name="so_total_summary">
                <div id="total" class="row" name="total">
                    <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                        <table class="table table-sm">
                            <tr class="border-black o_subtotal" style="">
                                <td name="td_amount_untaxed_label"><strong>Subtotal</strong></td>
                                <td name="td_amount_untaxed" class="text-right">
                                    <span t-esc="'{0:,.2f}'.format(doc.amount_untaxed)"/>
                                </td>
                            </tr>
                            <tr class="border-black">
                            <td><strong>Taxable Amount</strong></td>
                            <td class="text-right">
                                <span t-esc="'{0:,.2f}'.format(doc.amount_untaxed)"/>
                            </td>
                        </tr>

                            <tr class=''>
                            <td ><strong>VAT (5%)</strong></td>
                            <td class="text-right">
                                <span t-esc="'{0:,.2f}'.format(doc.amount_tax)"/>
                            </td>
                        </tr>


                            <tr class="border-black o_total">
                                <td name="td_amount_total_label"><strong>Total Amount</strong></td>
                                <td name="td_amount_total" class="text-right">
                                    <span  style="font-weight: bold;" t-esc="'{0:,.2f}'.format(doc.amount_total)"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>

            <div t-if="doc.signature" class="mt32 ml64 mr4" name="signature">
                <div class="offset-8">
                    <strong>Signature</strong>
                </div>
                <div class="offset-8">
                    <img t-att-src="image_data_uri(doc.signature)" style="max-height: 4cm; max-width: 8cm;"/>
                </div>
                <div class="offset-8 text-center">
                    <p t-field="doc.signed_by"/>
                </div>
            </div>

            <div class="oe_structure"/>

            <p t-field="doc.note"/>
            <p t-if="doc.payment_term_id.note">
                <span t-field="doc.payment_term_id.note"/>
            </p>
            <p id="fiscal_position_remark" t-if="doc.fiscal_position_id and doc.fiscal_position_id.sudo().note">
                <strong>Fiscal Position Remark:</strong>
                <span t-field="doc.fiscal_position_id.sudo().note"/>
            </p>
            <p>
                <strong>Total Amount in words : </strong><span t-esc="doc.currency_id.amount_to_text(doc.amount_total)"/> only
            </p>
        </div>

            <div class="row">

              <div class="col-3" style="right;">
                  <p class="text-center" style="padding-left:5mm;">
                      <br/><br/><br/><br/>

                  </p>

                <p class="text-center" style="padding-left:5mm; border-top:1px solid black; border-length: 7px;">

                   Accepted By</p>
              </div>

              <div class="col-6" style="center">

              </div>

              <div class="col-3" style="left">
                  <p class="text-center" style="padding-left:5mm;">
                      <br/><br/><br/><br/><br/>

                  </p>

                <p class="text-center" style="padding-left:5mm; border-top:1px solid black; border-length: 7px;">

                    Accepted Date
                </p>
              </div>
        </div>
    </t>
 </template>
       <template id="sale.report_saleorder">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="mis_reports.report_saleorder_document" t-lang="doc.partner_id.lang"/>
                </t>
            </t>
       </template>


  </data>
</odoo>

